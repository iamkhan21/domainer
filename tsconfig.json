{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "types": ["svelte", "jest"],
    "lib": [
      "esnext",
      "dom"
    ],
    "strict": true
  },
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.svelte",
    "./jest-setup.ts"
  ],
  "exclude": ["node_modules", ".routify", "dist"]
}
